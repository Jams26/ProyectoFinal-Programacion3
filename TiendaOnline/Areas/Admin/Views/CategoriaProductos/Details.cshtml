@model TiendaOnline.Models.CategoriaProductos
@{
    ViewData["Title"] = "Detalles de Categoria";
}

<br />

<h2 class="text-info"> Detalles Categoria de Producto</h2>

<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="nombreCategoria"></label>
            </div>
            <div class="col-5">
                <input asp-for="nombreCategoria" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="nombreCategoria" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-success">Volver a la lista</a>

            @*<input type="submit" class="btn btn-success" value="Volver a la lista" />*@
        </div>
    </div>
</form>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}