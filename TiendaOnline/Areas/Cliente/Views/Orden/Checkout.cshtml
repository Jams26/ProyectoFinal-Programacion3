@model TiendaOnline.Models.Orden
@using TiendaOnline.Utilidades
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Detalles de la Orden";
}

@{

    List<Productos> productos = HttpContextAccessor.HttpContext.Session.Get<List<Productos>>("productos");
    
    if (productos == null)
    {
        productos = new List<Productos>();
    }

}

<br />

<h2 class="text-info"> Detalles de la Orden</h2>

<form asp-action="" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="col-8">

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-5">
                    <input type="hidden" asp-for="ID" />
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="numeroTel"></label>
                </div>
                <div class="col-5">
                    <input asp-for="numeroTel" class="form-control" />
                    <span asp-validation-for="numeroTel" class="text-danger"></span>
                </div>
                
            </div>


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Direccion"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Correo"></label>
                </div>
                <div class="col-5">
                    @*<select asp-for="CategoriaProductoId" asp-items="ViewBag.categoriaProductoId" class="form-control"></select>*@
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Fecha"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
            </div>




            @*<div class="form-group row">
                <div class="col-2">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>*@




            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Lat"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Lat" class="form-control" />
                    <span asp-validation-for="Lat" class="text-danger"></span>
                </div>
            </div>




            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Long"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Long" class="form-control" />
                    <span asp-validation-for="Long" class="text-danger"></span>
                </div>
            </div>




        </div>
        <div class="col-4">
            <table class="table table-bordered text-center" >
                <thead>
                    <tr>
                        <th>Imagen</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var k in productos)
                    {
                        <tr>
                            <td>
                                <img src="~/@k.Imagen" height="100px" width="150px" />
                            </td>
                            <td>@k.Nombre</td>
                            <td>$@k.Precio</td>
                        </tr>
                        
                    }
                </tbody>
            </table>

        </div>
        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        
        <div align="right">
            <div class="text-right">
                <h3>Monto Total : $@productos.Sum(c => c.Precio)</h3>
            </div>
            <div class="align-bottom float-right">
                &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                <input type="submit" value="Hacer el Pedido" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}